<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0"
			style="-fx-font-family: 'Courier New'; -fx-font-size: 16;"
			xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
			fx:controller="cn.jeff.app.editor.dbf.MainWndJ">
	<center>
		<TabPane fx:id="mainTabPane" tabClosingPolicy="ALL_TABS" BorderPane.alignment="CENTER">
			<Tab text="Untitled Tab 1">
				<AnchorPane minHeight="0.0" minWidth="0.0"/>
			</Tab>
			<Tab text="Untitled Tab 2">
				<AnchorPane minHeight="0.0" minWidth="0.0"/>
			</Tab>
		</TabPane>
	</center>
	<top>
		<FlowPane hgap="20.0" vgap="20.0" BorderPane.alignment="CENTER">
			<padding>
				<Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
			</padding>
			<Button fx:id="btnOpenFile" mnemonicParsing="false" onAction="#btnClicked" text="打开文件"/>
		</FlowPane>
	</top>
	<bottom>
		<FlowPane hgap="20.0" style="-fx-border-color: green; -fx-border-radius: 5;" vgap="20.0"
				  BorderPane.alignment="CENTER">
			<opaqueInsets>
				<Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
			</opaqueInsets>
			<padding>
				<Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
			</padding>
			<Label fx:id="lbStatus" text="就绪"/>
		</FlowPane>
	</bottom>
</BorderPane>
